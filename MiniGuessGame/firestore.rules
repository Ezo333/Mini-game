rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - allow read/write for now (can be restricted later)
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Rooms collection for multiplayer
    match /rooms/{roomCode} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }

    // Solo games collection
    match /soloGames/{gameId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }

    // Leaderboard can be read by anyone
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if false;
    }
  }
}
